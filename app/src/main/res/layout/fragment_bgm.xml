<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bgmplay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kankanla.e560.m0330a.BGMFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:background="@drawable/button_maru"
                android:id="@+id/button_start"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:width="60dp"
                android:height="60dp"
                android:text="@string/BGMPlayer" />

            <Button
                android:background="@drawable/button_maru"
                android:id="@+id/button_pause"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="@string/BGMPause" />

            <Button
                android:background="@drawable/button_maru"
                android:id="@+id/button_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BGMStop" />

            <Button
                android:background="@drawable/button_maru"
                android:id="@+id/BGMFolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BGMFolder" />

            <Button
                android:background="@drawable/button_maru"
                android:id="@+id/localfolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lfolder" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/seekBar_R"
                style="@android:style/Widget.SeekBar"
                android:layout_width="294dp"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <SeekBar
                android:id="@+id/seekBar_L"
                style="@android:style/Widget.SeekBar"
                android:layout_width="294dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/nowplaying_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="text" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
